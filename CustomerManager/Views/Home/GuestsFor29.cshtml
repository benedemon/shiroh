@model IEnumerable<CustomerManager.Code.Models.Guest>

@{
    ViewBag.Title = "GuestsFor29";
}

<h2>Guests for 29th February</h2>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RSVPDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOfRSVP)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RSVPDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOfRSVP)
                </td>
            </tr>
        }
    </tbody>

</table>
